# ThronixPRO Environment Configuration Template
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://your_username:your_password@localhost:5432/thronixpro

# Alternative cloud database examples:
# DATABASE_URL=postgresql://username:password@ep-example.c-2.us-east-1.aws.neon.tech/neondb?sslmode=require
# DATABASE_URL=postgresql://username:password@hostname:5432/railway

# =============================================================================
# SECURITY CONFIGURATION (Required)
# =============================================================================
# JWT secret key for token signing (use a long, random string)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Encryption key for sensitive data (exactly 32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# Session secret for express-session
SESSION_SECRET=your-session-secret-key-change-this

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application environment
NODE_ENV=development

# Server port
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000

# API base URL
API_BASE_URL=http://localhost:5000/api

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Resend API key for email services (password reset, verification)
RESEND_API_KEY=re_your_resend_api_key_here

# Alternative email service (SendGrid)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email settings
EMAIL_FROM=support@thronixpro.co.uk
EMAIL_REPLY_TO=support@thronixpro.co.uk

# =============================================================================
# CRYPTOCURRENCY EXCHANGE APIs
# =============================================================================

# KuCoin API Configuration
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_SECRET_KEY=your_kucoin_secret_key
KUCOIN_PASSPHRASE=your_kucoin_passphrase
KUCOIN_SANDBOX=false

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=false

# Bybit API Configuration
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key
BYBIT_TESTNET=false

# =============================================================================
# AI SERVICE CONFIGURATION (Optional)
# =============================================================================
# OpenAI API key for AI trading strategies
OPENAI_API_KEY=sk-your_openai_api_key_here

# AI service URL (if running as separate microservice)
AI_SERVICE_URL=http://localhost:5001

# AI service features
AI_ENABLED=true
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000

# =============================================================================
# MOBILE IAP CONFIGURATION (Optional)
# =============================================================================

# Huawei AppGallery IAP
HUAWEI_APP_ID=your_huawei_app_id
HUAWEI_CLIENT_ID=your_huawei_client_id
HUAWEI_CLIENT_SECRET=your_huawei_client_secret
HUAWEI_IAP_URL=https://subscr-dre.iap.dbankcloud.com

# Samsung Galaxy Store IAP
SAMSUNG_SERVICE_ACCOUNT_ID=your_samsung_service_account_id
SAMSUNG_SERVICE_ACCOUNT_KEY=your_samsung_service_account_key

# IAP service URLs
HUAWEI_IAP_SERVICE_URL=http://localhost:5002
SAMSUNG_IAP_SERVICE_URL=http://localhost:5003

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# Log file paths
LOG_FILE_COMBINED=logs/combined.log
LOG_FILE_ERROR=logs/error.log
LOG_FILE_SECURITY=logs/security.log
LOG_FILE_TRADING=logs/trading.log

# Enable console logging in development
LOG_CONSOLE=true

# =============================================================================
# REDIS CONFIGURATION (Optional - for session storage)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# WebSocket server settings
WS_PORT=5000
WS_HEARTBEAT_INTERVAL=30000

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# =============================================================================
# SECURITY HEADERS CONFIGURATION
# =============================================================================
# CORS configuration
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true

# Content Security Policy
CSP_ENABLED=true

# =============================================================================
# DATABASE POOL CONFIGURATION
# =============================================================================
# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================
# Health check endpoint
HEALTH_CHECK_ENABLED=true

# Performance monitoring
PERFORMANCE_MONITORING=true

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable development features
DEV_MODE=true

# Mock data for development
USE_MOCK_DATA=false

# Debug logging
DEBUG_TRADING=false
DEBUG_WEBSOCKET=false
DEBUG_AI=false

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Production optimizations (set when NODE_ENV=production)
# ENABLE_CLUSTER=true
# ENABLE_COMPRESSION=true
# TRUST_PROXY=true

# SSL configuration for production
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt

# =============================================================================
# BACKUP CONFIGURATION (Optional)
# =============================================================================
# Automatic backup settings
# BACKUP_ENABLED=false
# BACKUP_INTERVAL=86400000
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=./backups

# =============================================================================
# LEGAL AND COMPLIANCE
# =============================================================================
# Terms of service and privacy policy URLs
TERMS_OF_SERVICE_URL=https://www.thronixpro.co.uk/terms
PRIVACY_POLICY_URL=https://www.thronixpro.co.uk/privacy

# Regulatory compliance settings
REQUIRE_KYC=false
REQUIRE_AML_CHECKS=false

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_TRADING=true
ENABLE_AI_BOTS=true
ENABLE_MOBILE_IAP=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ADVANCED_CHARTS=true
ENABLE_SOCIAL_TRADING=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Third-party service integrations
# ANALYTICS_SERVICE_URL=
# ERROR_TRACKING_SERVICE_URL=
# CUSTOMER_SUPPORT_SERVICE_URL=

# =============================================================================
# LOCALIZATION
# =============================================================================
# Default language and supported languages
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh,es,fr,de,ja,ko

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Keep your API keys and secrets secure
# 3. Use strong, unique values for JWT_SECRET and ENCRYPTION_KEY
# 4. Regularly rotate your API keys and secrets
# 5. For production, use environment variables instead of .env file
# 6. Enable SSL/TLS in production environments
# 7. Configure proper firewall rules for your server
# 8. Regularly backup your database and configuration
# 9. Monitor your application logs for security events
# 10. Comply with local regulations for cryptocurrency trading

