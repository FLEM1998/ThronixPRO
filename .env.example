# =============================================================================
# THRONIXPRO TRADING PLATFORM - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://username:password@host:port/database

# Authentication & Security (REQUIRED - Generate secure random values)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long
SESSION_SECRET=your-secure-session-secret-key-minimum-32-characters-long
ENCRYPTION_KEY=your-32-character-encryption-key!!

# Production Environment
NODE_ENV=production
PORT=5000
LOG_LEVEL=info

# Email Service Configuration (REQUIRED for password reset)
RESEND_API_KEY=your-resend-api-key-for-email-delivery
SENDGRID_API_KEY=your-sendgrid-api-key-alternative

# Exchange API Credentials (REQUIRED for live trading)
# Users will connect their own exchange accounts through the platform
# These are for system-level operations only
EXCHANGE_RATE_LIMIT=1000
EXCHANGE_TIMEOUT=30000

# AI & Market Data Services (OPTIONAL - Enhanced features)
AI_SERVICE_URL=http://localhost:5001
OPENAI_API_KEY=your-openai-api-key-for-ai-features
NEWS_API_KEY=your-news-api-key-for-live-sentiment
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-for-market-data

# Mobile App Store IAP Services (OPTIONAL - Mobile monetization)
HUAWEI_IAP_URL=http://localhost:5002
SAMSUNG_IAP_URL=http://localhost:5003
HUAWEI_APP_ID=your-huawei-app-id
HUAWEI_APP_SECRET=your-huawei-app-secret

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# SSL/TLS Configuration (Production)
FORCE_HTTPS=true
TRUST_PROXY=true

# Monitoring & Analytics (OPTIONAL)
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_API_KEY=your-analytics-api-key

# Feature Flags
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AI_FEATURES=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_DEMO_MODE=false

# =============================================================================
# DEVELOPMENT ONLY - Remove in production
# =============================================================================
# DEV_BYPASS_AUTH=false
# DEV_MOCK_EXCHANGES=false